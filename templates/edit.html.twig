
{% extends 'app.html.twig' %}

{% block body %}

<div class="">
	{{ form_start(form) }}
<section class="vh-10" style="background-color: #eee;">
  <div class="container h-10">
    <div class="row d-flex justify-content-center align-items-center h-10">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 ">Modification</p>

                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                     <label class="text-info">Libelle:</label>
                       {{form_widget(form.libelle, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-group">
                  <label class="text-info">Description:</label>
                       {{form_widget(form.description, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>
               <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                                       <label class="text-info">Lien:</label>
                       {{form_widget(form.lien, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>
                   <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                       <label class="text-info">Order:</label>
                       {{form_widget(form.orders, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                     
                         <label class="text-info">ALt:</label>
                       {{form_widget(form.alt, {'attr': {'class': 'form-control'}})}}
                        <label class="text-info">Icone:</label>
                      {{form_widget(form.icone, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                             <label class="text-info">Statut:</label>
                       {{form_widget(form.statut, {'attr': {'class': 'form-control'}})}}

                    </div>
                  </div>
                 
                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                                               <label class="text-info">Fenetre:</label>
                       {{form_widget(form.fenetre, {'attr': {'class': 'form-control'}})}}
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary">Valider</button>
                  </div>


              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="{{ asset('images/img1.png') }}" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
  {{ form_end(form) }} 

</div>
{% endblock %}